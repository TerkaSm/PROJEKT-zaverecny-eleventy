            <a href="/pomahej/" class="menu__item none"><img class="menu__icon" src="/icons/icone-pomahej-menu.svg" alt="icone-pomahej"></a>
            <a href="/o-nas/" class="menu__item none"><img class="menu__icon" src="/icons/Icone-o-nas-menu.svg" alt="icone-o-nas"></a>
            <a href="/" class="menu__item">Domů</a>
            <a href="/adoptuj/" class="menu__item">Adoptuj</a>
            <a href="/daruj/" class="menu__item">Daruj</a>
            <a href="/pomahej/" class="menu__item">Pomáhej</a>
            <a href="/o-nas/" class="menu__item">O nás</a>
        </nav>

    </div>


    <!--Main-->

    <main class="wrapper">



        {{ content | safe }}



    </main>


    <!--Footer-->

    <footer class="footer-background">
        <section class="footer wrapper">
            <figure class="footer__logo-wrapp"><img class="footer__logo-img" src="/icons/logo-azyl-footer.svg" alt="logo-azyl"></figure>
            
            <div class="menu-footer">
                <a href="/" class="menu-footer__item">Domů</a>
                <a href="/adoptuj/" class="menu-footer__item">Adoptuj</a>
                <a href="/daruj/" class="menu-footer__item">Daruj</a>
                <a href="/pomahej/" class="menu-footer__item">Pomáhej</a>
